@{
    Layout = "_AdminLayout";
}
@model IEnumerable<DotNet.LaptopStore.Models.Laptop>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptop Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <!-- Custom JavaScript -->
    <script src="~/js/laptop-admin.js" defer></script>
</head>

<body>
    <div class="container">
        <h1 class="text-center my-4">Laptop Management</h1>

        <!-- Add New Laptop Button -->
        <div class="mb-4 text-right">
            <a href="@Url.Action("AddLaptopPage", "Laptop")" class="btn btn-success">Add New Laptop</a>
        </div>

        <!-- Laptop List -->
        <table class="table table-bordered table-striped" style="width: 112%;">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var laptop in Model)
                {
                    <tr>
                        <td>
                            <img src="@laptop.Image" alt="Laptop Image" style="width: 100px; border-radius: 5px;">
                        </td>
                        <td>@laptop.Name</td>
                        <td>@laptop.Category?.Name</td>
                        <td>@laptop.Quantity</td>
                        <td>@laptop.Price.ToString("C")</td>
                        <td>@laptop.Status</td>
                        <td>
                            <!-- Edit Button -->
                            <button style="width: 70px;" class="btn btn-primary btn-sm">
                                Edit
                            </button>
                            <br>
                            <br>
                            <!-- Delete Button -->
                            <a style="width: 70px;" onclick="return confirm('Are you sure?')"
                                href="@Url.Action("Delete", "Laptop", new { id = laptop.Id })"
                                class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>
