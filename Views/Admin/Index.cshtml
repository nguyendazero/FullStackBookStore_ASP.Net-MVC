@{
    Layout = "_AdminLayout";
}
@model IEnumerable<DotNet.LaptopStore.Models.Order>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/admin-style.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mt-3">
                <h2>Welcome to the Admin Dashboard!</h2>
                <p>Manage your system effectively with the quick stats below.</p>
            </div>
        </div>

        <!-- Stat Cards -->
        <div class="row mt-4">
            <!-- Total Users Card -->
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-primary shadow">
                    <div class="card-body">
                        <div class="card-title h5">Total Users</div>
                        <div class="display-4">1,234</div>
                    </div>
                </div>
            </div>

            <!-- Total Orders Card -->
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-success shadow">
                    <div class="card-body">
                        <div class="card-title h5">Total Orders</div>
                        <div class="display-4">567</div>
                    </div>
                </div>
            </div>

            <!-- Products Sold Card -->
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-warning shadow">
                    <div class="card-body">
                        <div class="card-title h5">Products Sold</div>
                        <div class="display-4">789</div>
                    </div>
                </div>
            </div>

            <!-- Total Revenue Card -->
            <div class="col-md-3 mb-4">
                <div class="card text-white bg-danger shadow">
                    <div class="card-body">
                        <div class="card-title h5">Total Revenue</div>
                        <div class="display-4">$12,345</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="row">
            <div class="col-12">
                <h3>Recent Orders</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {


                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.User?.FullName</td>
                                    <td>@order.Date</td>
                                    <td><span class="badge bg-success">@order.Status</span></td>
                                    <td>@order.Status</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/admin-script.js"></script>
</body>

</html>