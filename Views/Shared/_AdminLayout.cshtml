<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Admin CSS -->
    <link href="~/css/admin-style.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active text-white" aria-current="page"
                                href="@Url.Action("Index", "Admin")">
                                <i class="bi bi-house-door"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Laptop", "Admin")">
                                <i class="bi bi-cart"></i> Manage Laptops
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("User", "Admin")">
                                <i class="bi bi-people"></i> Manage Users
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Coupon", "Admin")">
                                <i class="bi bi-cart"></i> Manage Coupons
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Color", "Admin")">
                                <i class="bi bi-cart"></i> Manage Color
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Manuniture", "Admin")">
                                <i class="bi bi-cart"></i> Manage Manunitures
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Rating", "Admin")">
                                <i class="bi bi-box-seam"></i> Manage Ratings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("Order", "Admin")">
                                <i class="bi bi-box-seam"></i> Manage Orders
                            </a>
                        </li>
                        <li class="nav-item" style="margin-top: 140px;">
                            <a class="nav-link text-white" href="@Url.Action("Settings", "Admin")">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>


            <!-- Main Content -->
            <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <header
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewBag.Title</h1>
                    <a href="@Url.Action("Logout", "User")" class="btn btn-danger">Logout</a>
                </header>

                <main>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and other scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Admin JavaScript -->
    <script src="~/js/admin-script.js"></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
